<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Titre à gauche -->
            <h1 class="h4 mb-0">Test Cisad</h1>

            <!-- Conteneur pour les éléments de droite -->
            <div class="d-flex align-items-center">
                <!-- Navigation (Accueil, Import CSV, Gestion Utilisateurs) -->
                <nav class="d-flex align-items-center">
                    <ul class="list-unstyled d-flex align-items-center mb-0">
                        <!-- Accueil -->
                        <li class="me-3">
                            <a href="{{ path('app_home') }}" class="text-white text-decoration-none">Accueil</a>
                        </li>

                        {# Afficher les liens supplémentaires pour les administrateurs #}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="me-3">
                                <a href="{{ path('admin_import_csv') }}" class="text-white text-decoration-none">Import CSV</a>
                            </li>
                            <li class="me-3">
                                <a href="{{ path('app_user_index') }}" class="text-white text-decoration-none">Gestion Utilisateurs</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>

                <!-- Profil -->
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_profil') }}" class="text-white text-decoration-none ms-3">
                        <!-- Logo de profil blanc (remplacez l'URL par celle de votre choix) -->
                        <img src="https://cdn-icons-png.flaticon.com/512/64/64572.png" alt="Profil" class="profile-logo" style="height: 30px; width: auto;">
                    </a>
                {% endif %}

                <!-- Déconnexion/Connexion -->
                {% if app.user %}
                    <form method="post" action="{{ path('app_logout') }}" class="d-inline ms-3">
                        <button type="submit" class="btn btn-danger">Déconnexion</button>
                    </form>
                {% else %}
                    <a href="{{ path('app_login') }}" class="text-white text-decoration-none ms-3">Connexion</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>